{
  "$schema": "node_modules/release-it/schema/release-it.json",
  "git": {
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "push": true,
    "tag": true,
    "tagName": "v${version}"
  },
  "github": false,
  "hooks": {
    "before:init": ["bun run --cwd package build"]
  },
  "npm": {
    "access": "public",
    "publish": true,
    "publishPath": "./package"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./package/package.json"
    }
  }
}
