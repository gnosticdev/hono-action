{
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.6",
    "@release-it/bumper": "^7.0.5",
    "release-it": "^19.0.4"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "name": "root",
  "packageManager": "bun@1.2.21",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "directory": "package",
    "type": "git",
    "url": "https://github.com/gnosticdev/hono-actions"
  },
  "scripts": {
    "build:package": "bun run --cwd package build",
    "build:playground": "bun run --cwd playground build",
    "changeset": "bunx changeset",
    "clean-install": "rm -rf node_modules bun.lock package/dist playground/dist && bun i --no-cache",
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "package:dev": "bun run --cwd package dev",
    "playground:dev": "bun run --cwd playground dev",
    "prepublish": "cd package && bun run typecheck && bun run build",
    "publish": "bunx changeset version && bunx changeset publish",
    "test": "bun test --cwd package",
    "typecheck": "bun --cwd package typecheck",
    "version": "bunx changeset version"
  },
  "version": "1.0.7",
  "workspaces": {
    "packages": [
      "package",
      "playground"
    ]
  }
}
