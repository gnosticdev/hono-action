{
  "name": "root",
  "version": "1.0.7",
  "repository": {
    "directory": "package",
    "type": "git",
    "url": "https://github.com/gnosticdev/hono-actions"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/cli": "^2.29.6",
    "@release-it/bumper": "^7.0.5",
    "release-it": "^19.0.4"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "packageManager": "bun@1.2.21",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "build:package": "bun run --cwd package build",
    "build:playground": "bun run --cwd playground build --force",
    "build": "bun run --cwd package build && bun run --cwd playground build --force",
    "clean-install": "rm -rf node_modules bun.lock package/dist playground/dist && bun i --no-cache",
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "dev:package": "bun run --cwd package dev",
    "dev:playground": "bun run --cwd playground dev",
    "prepublish": "bun run --cwd package typecheck && bun run --cwd package build",
    "publish": "bun changeset && bun changeset version && bun changeset publish",
    "test": "bun test --cwd package",
    "typecheck": "bun --cwd package typecheck",
    "version": "bun changeset version"
  },
  "trustedDependencies": [
    "@tailwindcss/oxide"
  ],
  "workspaces": {
    "packages": [
      "package",
      "playground"
    ]
  }
}
