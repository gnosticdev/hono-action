{
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@release-it/bumper": "^7.0.5",
    "release-it": "^19.0.4"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "name": "root",
  "packageManager": "bun@1.2.21",
  "private": true,
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "package:dev": "bun run --cwd package dev",
    "playground:dev": "bun run --cwd playground dev",
    "publish": "bun run release",
    "release": "cd package && npm run release",
    "typecheck": "bun --cwd package typecheck"
  },
  "version": "0.0.0",
  "workspaces": {
    "packages": [
      "package",
      "playground"
    ]
  }
}
