{
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "release-it": "^19.0.4"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "name": "root",
  "packageManager": "bun@1.2.21",
  "private": true,
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check --write",
    "package:dev": "bun run --cwd package dev",
    "playground:dev": "bun run --cwd playground dev",
    "typecheck": "bun --cwd package typecheck",
    "publish": "bun run release",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch"
  },
  "version": "1.0.5",
  "workspaces": {
    "packages": [
      "package",
      "playground"
    ]
  }
}
