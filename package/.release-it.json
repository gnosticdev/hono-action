{
  "$schema": "../node_modules/release-it/schema/release-it.json",
  "git": {
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "push": true,
    "tag": true,
    "tagName": "v${version}"
  },
  "github": false,
  "hooks": {
    "after:release": "cd .. && npm pack package && npm publish package-*.tgz --access public && rm package-*.tgz",
    "before:init": ["bun run build"]
  },
  "npm": {
    "access": "public",
    "publish": false
  }
}
